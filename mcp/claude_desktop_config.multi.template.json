{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-desktop/main/config-schema.json",
  "mcpServers": {
    "bibliometrics": {
      "command": "uvx",
      "args": ["mcp-neo4j-cypher@0.5.2", "--namespace", "db1", "--read-only"],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "CHANGE_ME",
        "NEO4J_DATABASE": "database_name_1",
        "NEO4J_READ_TIMEOUT": "60"
      }
    },
    "gestao-fe": {
      "command": "uvx",
      "args": ["mcp-neo4j-cypher@0.5.2", "--namespace", "db2", "--read-only"],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "CHANGE_ME",
        "NEO4J_DATABASE": "database_name_2",
        "NEO4J_READ_TIMEOUT": "60"
      }
    }
  }
}
